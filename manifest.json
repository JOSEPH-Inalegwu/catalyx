{
    "manifest_version": 3,
    "name": "Catalyx",
    "description": "Grow your X followers with daily actions and proven strategies.",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Catalyx"
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    }
}